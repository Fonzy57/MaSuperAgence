<h2>Nouveau message de {{ contact.firstname }} {{ contact.lastname }}</h2>


<table>
    <tr style="background-color:#ebebeb;">
        <td style="padding: 10px; width:10%">Nom du bien:</td>
        <td style="padding: 10px;">{{ contact.property.title }}</td>
    </tr>
    <tr>
        <td style="padding: 10px; width:10%">Nom :</td>
        <td style="padding: 10px;">{{ contact.lastname }}</td>
    </tr>
    <tr style="background-color:#ebebeb;">
        <td style="padding: 10px; width:10%">Prénom :</td>
        <td style="padding: 10px;">{{ contact.firstname }}</td>
    </tr>
    <tr>
        <td style="padding: 10px; width:10%">Téléphone :</td>
        <td style="padding: 10px;">{{ contact.phone }}</td>
    </tr>
    <tr style="background-color:#ebebeb;">
        <td style="padding: 10px; width:10%">Email :</td>
        <td style="padding: 10px;">{{ contact.email }}</td>
    </tr>
    <tr>
        <td style="padding: 10px; width:10%">Message :</td>
        <td style="padding: 10px;">{{ contact.message | nl2br }}</td>
    </tr>
</table>